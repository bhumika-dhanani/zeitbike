<?xml version="1.0"?>
<config>
    <tabs>
        <bkordertab translate="label" module="backorder">
            <label>Magik</label>
            <sort_order>270</sort_order>
        </bkordertab>
    </tabs>
    <sections>
    <bkordersection translate="label" module="backorder">
        <label>Backorder</label>
        <tab>bkordertab</tab> 
        <sort_order>100</sort_order>
        <show_in_default>1</show_in_default>
        <show_in_website>1</show_in_website>
        <show_in_store>1</show_in_store>
        <groups>
            <bkordergeneral translate="label">
                <label>General Options</label>
                <frontend_type>text</frontend_type>
                <sort_order>200</sort_order>
                <show_in_default>1</show_in_default>
                <show_in_website>1</show_in_website>
                <show_in_store>1</show_in_store>
                <fields>                   
                    <enabled translate="label" module="backorder">
                        <label>Enable Extension</label>
                        <frontend_type>select</frontend_type>
                        <source_model>adminhtml/system_config_source_yesno</source_model>
                        <sort_order>1</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>                        
                    </enabled>
		    <bktext translate="label">
                        <label>Add to cart" text substitute for Backordered products</label>
                        <frontend_type>text</frontend_type>                        
                        <sort_order>2</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
		    </bktext> 
		    <changebutton translate="label" module="backorder">
                        <label>Overwrite Default "Add to cart" Text</label>
                        <frontend_type>select</frontend_type>
                        <source_model>adminhtml/system_config_source_yesno</source_model>
                        <sort_order>3</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>                        
                    </changebutton>
                     <globalnote translate="label">
			<label>Backorder Global Note</label>
			<frontend_type>editor</frontend_type>
			<validate>required-entry</validate>
			<frontend_model>backorder/adminhtml_system_config_editor</frontend_model>
			<comment>Display the content in the information bar</comment>
			<sort_order>4</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
		    </globalnote>
		    <availabilitytext  translate="label">
                        <label>Backorder Availability Text</label>
                        <frontend_type>text</frontend_type>                        
                        <sort_order>5</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
		    </availabilitytext> 
                 </fields>
            </bkordergeneral> 
            <bkordercontent translate="label">
                <label>Content Options</label>
                <frontend_type>text</frontend_type>
                <sort_order>201</sort_order>
                <show_in_default>1</show_in_default>
                <show_in_website>1</show_in_website>
                <show_in_store>1</show_in_store>
                <fields>                   
                    <enablesimple translate="label" module="backorder">
                        <label>Enable for Simple Product</label>
                        <frontend_type>select</frontend_type>
                        <source_model>adminhtml/system_config_source_yesno</source_model>
                        <sort_order>11</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>                        
                    </enablesimple>
		    <enableconfig translate="label" module="backorder">
                        <label>Enable for Configurable Product</label>
                        <frontend_type>select</frontend_type>
                        <source_model>adminhtml/system_config_source_yesno</source_model>
                        <sort_order>12</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>                        
                    </enableconfig>
                    <enablebundle translate="label" module="backorder">
                        <label>Enable for Bundled Product</label>
                        <frontend_type>select</frontend_type>
                        <source_model>adminhtml/system_config_source_yesno</source_model>
                        <sort_order>13</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>                        
                    </enablebundle>
                    <enablegrouped translate="label" module="backorder">
                        <label>Enable for Grouped Product</label>
                        <frontend_type>select</frontend_type>
                        <source_model>adminhtml/system_config_source_yesno</source_model>
                        <sort_order>14</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>                        
                    </enablegrouped>
		 </fields>
	    </bkordercontent>
	 </groups>
    </bkordersection>
</sections>  
</config>